{
  "name": "hve-learning",
  "version": "0.0.0",
  "description": "HVE Learning Platform (repo tooling)",
  "private": true,
  "scripts": {
    "spell-check": "cspell \"**/*.{md,ts,js,json,yaml,yml}\"",
    "spell-check:fix": "cspell \"**/*.{md,ts,js,json,yaml,yml}\" --show-suggestions",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 \"**/*.md\" --fix",
    "format:tables": "markdown-table-formatter \"**/*.md\"",
    "catalog:generate": "pwsh ./scripts/learning/Generate-LearningCatalog.ps1",
    "catalog:validate": "pwsh ./scripts/learning/Validate-CatalogConsistency.ps1",
    "extension:package": "cd extension && rm -rf .github scripts learning && cp -r ../.github . && cp -r ../scripts . && cp -r ../learning . && npx @vscode/vsce package --no-dependencies && rm -rf .github scripts learning"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.5.0",
    "cspell": "9.4.0",
    "markdown-link-check": "3.14.2",
    "markdown-table-formatter": "^1.6.0",
    "markdownlint-cli2": "^0.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eedorenko/hve-learning.git"
  },
  "author": "HVE Essentials Team",
  "license": "MIT"
}
