{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learning-platform.github.io/schemas/learning-path-manifest.json",
  "title": "Learning Path Manifest",
  "description": "Schema for the learning path manifest containing all learning path descriptors",
  "type": "object",
  "required": ["descriptors", "checksum", "generatedAt"],
  "properties": {
    "descriptors": {
      "type": "array",
      "description": "Array of learning path descriptors",
      "items": {
        "$ref": "#/definitions/descriptor"
      }
    },
    "checksum": {
      "type": "string",
      "description": "SHA-256 checksum of the descriptors array for change detection",
      "pattern": "^[a-f0-9]{64}$"
    },
    "generatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp when the manifest was generated",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "description": "Manifest schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    }
  },
  "definitions": {
    "descriptor": {
      "type": "object",
      "description": "Learning path descriptor with metadata and content structure",
      "required": ["id", "title", "description", "category", "difficulty", "tags", "estimatedTime", "prerequisites", "steps", "outcomes", "path"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the learning path",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "description": "Display title of the learning path",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "Brief description of the learning path content",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "description": "Primary category for the learning path",
          "minLength": 1
        },
        "difficulty": {
          "type": "string",
          "description": "Difficulty level",
          "enum": ["Beginner", "Intermediate", "Advanced", "Expert"]
        },
        "tags": {
          "type": "array",
          "description": "Keywords and topics covered in the learning path",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "estimatedTime": {
          "type": "string",
          "description": "Estimated completion time (e.g., '2 hours', '1 week')",
          "minLength": 1
        },
        "prerequisites": {
          "type": "array",
          "description": "Required knowledge or skills before starting",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "steps": {
          "type": "array",
          "description": "Ordered list of learning steps",
          "items": {
            "type": "object",
            "required": ["title", "description"],
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "duration": {
                "type": "string"
              }
            }
          },
          "minItems": 1
        },
        "outcomes": {
          "type": "array",
          "description": "Expected learning outcomes after completion",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "path": {
          "type": "string",
          "description": "Relative file path to the learning path markdown file",
          "minLength": 1
        },
        "author": {
          "type": "string",
          "description": "Author or contributor name"
        },
        "lastUpdated": {
          "type": "string",
          "description": "ISO 8601 timestamp of last update",
          "format": "date-time"
        }
      }
    }
  }
}
