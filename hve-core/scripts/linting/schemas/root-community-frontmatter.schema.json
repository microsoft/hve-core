{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/microsoft/hve-core/schemas/root-community-frontmatter.schema.json",
  "title": "Root Community File Frontmatter Schema",
  "description": "Frontmatter schema for root community files (README.md, CONTRIBUTING.md, etc.)",
  "allOf": [
    {
      "$ref": "base-frontmatter.schema.json"
    }
  ],
  "type": "object",
  "required": ["title", "description"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "description": "Recommended: Author or organization name"
    },
    "ms.date": {
      "$ref": "base-frontmatter.schema.json#/definitions/iso8601Date",
      "description": "Recommended: Last modified date"
    },
    "ms.topic": {
      "type": "string",
      "enum": ["overview", "concept", "reference", "guide", "hub-page"],
      "description": "Recommended: Document topic type"
    },
    "keywords": {
      "$ref": "base-frontmatter.schema.json#/definitions/keywordsArray"
    },
    "estimated_reading_time": {
      "$ref": "base-frontmatter.schema.json#/definitions/positiveInteger"
    }
  },
  "additionalProperties": true
}