{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/microsoft/hve-core/schemas/docs-frontmatter.schema.json",
  "title": "Documentation File Frontmatter Schema",
  "description": "Frontmatter schema for files in the docs directory",
  "allOf": [
    {
      "$ref": "base-frontmatter.schema.json"
    }
  ],
  "type": "object",
  "required": ["title", "description"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "description": "Recommended: Author or team name"
    },
    "ms.date": {
      "$ref": "base-frontmatter.schema.json#/definitions/iso8601Date",
      "description": "Recommended: Last modified date"
    },
    "ms.topic": {
      "type": "string",
      "enum": ["overview", "concept", "tutorial", "reference", "how-to", "troubleshooting", "architecture"],
      "description": "Recommended: Documentation topic type"
    },
    "keywords": {
      "$ref": "base-frontmatter.schema.json#/definitions/keywordsArray"
    },
    "estimated_reading_time": {
      "$ref": "base-frontmatter.schema.json#/definitions/positiveInteger"
    },
    "ms.custom": {
      "type": "object",
      "description": "Custom Microsoft metadata"
    }
  },
  "additionalProperties": true
}