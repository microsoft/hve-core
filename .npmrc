# Node package manager configuration

# Save exact versions in package.json
save-exact=true

# Use package-lock.json for reproducible installs
package-lock=true

# Increase log level for debugging (options: silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=warn

# Audit packages for security vulnerabilities on install
audit=true

# Limit audit to production dependencies only
audit-level=moderate

# Fund messages (set to false to disable funding messages)
fund=true

# Engine strict (enforce engine requirements in package.json)
engine-strict=false

# Progress display during install
progress=true
